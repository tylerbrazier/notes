# Systemd unit for starting remote forwarding from server to local machine.
# See notes/ssh_remote_forwarding.md.
# Edit User and ExecStart below and drop this file in /etc/systemd/system/
# Then you can start and enable it like any other systemd unit.

[Unit]
Description=Remote forward ssh
Requires=network.target
After=network.target

[Service]
User=pi
ExecStart=/usr/bin/ssh -nNTR 2222:localhost:22 pi@whatever.com
Restart=always
RestartSec=30

[Install]
WantedBy=multi-user.target
